{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",        // 必须！支持 JSX 语法
    "module": "ES2022",
    "moduleResolution": "bundler", // 或 "node"（旧项目）
    "noEmit": true,
    "allowImportingTsExtensions": true, // 允许 import .ts/.tsx（Vite/现代工具推荐）
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "src/**/*"   // 确保包含 src/types/
  ],
  "files": [],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
